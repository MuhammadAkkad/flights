<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    android:layout_marginBottom="@dimen/margin_12"
    app:cardCornerRadius="@dimen/margin_16">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/margin_14">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16">

            <ImageView
                android:id="@+id/airline_icon_iv"
                android:layout_width="@dimen/margin_24"
                android:layout_height="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_8" />

            <TextView
                android:id="@+id/airline_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pegausu"
                android:textSize="@dimen/text_size_16" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/departure_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_14"
                    tools:text="SAW" />

                <ImageView
                    android:layout_width="@dimen/margin_12"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_round_arrow_forward_ios_24"
                    app:tint="@color/dark_grey" />

                <TextView
                    android:id="@+id/destination_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_14"
                    tools:text=" AMS" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/departure_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text="08:40" />

                <ImageView
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/dark_grey" />

                <TextView
                    android:id="@+id/arrival_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/dark_grey"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/text_size_16"
                    tools:text="11:30" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:id="@+id/flight_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold"
                tools:text="1.449.99" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:gravity="end"
                android:src="@drawable/ic_round_arrow_forward_ios_24"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/text_size_24"
                app:tint="@android:color/holo_green_light" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="?android:attr/listDivider" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@drawable/item_arrow_down_background"
                android:contentDescription="@null"
                android:paddingStart="@dimen/margin_6"
                android:paddingEnd="@dimen/margin_6"
                android:src="@drawable/ic_round_keyboard_arrow_down" />

            <TextView
                android:id="@+id/flight_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/text_size_16"
                tools:text="Direct ucus" />

            <View
                android:layout_width="@dimen/margin_6"
                android:layout_height="@dimen/margin_6"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginEnd="@dimen/margin_12"
                android:background="@drawable/dot" />

            <ImageView
                android:id="@+id/baggage_allowance_iv"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_8"
                android:contentDescription="@null"
                tools:src="@drawable/bag" />

            <TextView
                android:id="@+id/baggage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                tools:text="El bagage" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>