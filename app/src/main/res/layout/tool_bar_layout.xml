<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_4"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_round_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/toolbar_flight_info_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/origin_country_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    tools:text="amsterdam" />

                <ImageView
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/dark_grey" />

                <TextView
                    android:id="@+id/destination_country_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_4"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    tools:text="istanbul" />

                <ImageView
                    android:layout_width="@dimen/margin_14"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_round_edit_24"
                    app:tint="@color/dark_grey" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_route_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_10"
                    tools:text="Tek yon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_10"
                    android:text="|" />

                <ImageView
                    android:layout_width="@dimen/margin_14"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_baseline_person_24"
                    app:tint="@color/dark_grey" />

                <TextView
                    android:id="@+id/number_of_passengers_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_10"
                    tools:text="1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_12"
            android:background="@drawable/notification_button_background"
            android:backgroundTint="@color/grey"
            android:contentDescription="@null"
            android:padding="@dimen/margin_6"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_grey" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_12"
            android:background="@drawable/notification_button_background"
            android:backgroundTint="@color/grey"
            android:contentDescription="@null"
            android:padding="@dimen/margin_6"
            android:src="@drawable/ic_round_favorite_border_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_grey" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.appbar.MaterialToolbar>