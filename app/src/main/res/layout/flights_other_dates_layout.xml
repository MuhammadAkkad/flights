<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_6"
    android:gravity="top"
    android:orientation="horizontal"
    android:weightSum="4">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_6"
            android:text="@string/previous_day"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/previous_day_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            tools:text="1,450.99 TL" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/today_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_6"
            android:drawableLeft="@drawable/ic_round_calendar_month_24"
            android:drawablePadding="@dimen/margin_3"
            android:drawableTint="@android:color/holo_green_light"
            android:textColor="@android:color/holo_green_light"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            tools:text="28 Haz Sal" />

        <TextView
            android:id="@+id/today_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4"
            android:textColor="@android:color/holo_green_light"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            tools:text="1,450.99 TL" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_2"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:background="@drawable/tab_indocator" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_6"
            android:text="@string/nextDay"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/next_day_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            tools:text="1,450.99 TL" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/divider2"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@drawable/divider_gradiant" />

    <ImageView
        android:layout_width="@dimen/margin_10"
        android:layout_height="@dimen/margin_48"
        android:layout_weight="1"
        android:padding="@dimen/margin_6"
        android:src="@drawable/ic_round_bar_chart_24"
        app:tint="@android:color/holo_green_light" />


</androidx.appcompat.widget.LinearLayoutCompat>